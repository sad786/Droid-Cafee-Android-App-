<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textIntro"
            android:layout_width="127dp"
            android:layout_height="42dp"
            android:text="Droid Cafe"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/ice"
            android:src="@drawable/icecream_circle"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="@+id/textIntro"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="16dp"
            android:onClick="order"
            android:contentDescription="This is Ice-Creaam Circle and it is very tasty dish in all sweats"/>

    <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/froyo"
            android:src="@drawable/froyo_circle"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="@+id/ice"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="16dp"

            android:contentDescription="This is froyo IceCreaam and you have to eat it complete "
            android:onClick="order"/>

    <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/donut"
            android:src="@drawable/donut_circle"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="@+id/froyo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="16dp"
            android:onClick="order"
            android:contentDescription="IceCreaam is very tasty and very cheap in cost with high quality"/>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="277dp"
            android:text="IceCreaam is very tasty and very cheap in cost with high quality"
            android:id="@+id/iceText"
            app:layout_constraintRight_toRightOf="@+id/ice"
            app:layout_constraintTop_toTopOf="@+id/textIntro"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp"
            app:layout_constraintStart_toEndOf="@+id/ice"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="277dp"
            android:text="IceCreaam is very tasty and very cheap in cost with high quality"
            android:id="@+id/froyoText"
            app:layout_constraintRight_toRightOf="@+id/froyo"
            app:layout_constraintTop_toTopOf="@+id/iceText"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="160dp"
            app:layout_constraintStart_toEndOf="@+id/ice"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="277dp"
            android:text="IceCreaam is very tasty and very cheap in cost with high quality"
            android:id="@+id/donutText"
            app:layout_constraintRight_toRightOf="@+id/donut"
            app:layout_constraintTop_toTopOf="@+id/froyoText"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="160dp"
            app:layout_constraintStart_toEndOf="@+id/ice"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>